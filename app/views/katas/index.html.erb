<h1>Katas list</h1>

<div>
  <%= link_to('New Kata', new_kata_path) %>
</div

<ul>
<% @katas.each do |kata| %>
  <li><%= link_to(kata.title, kata_path(kata.id)) %>
    - <%= link_to('Edit', edit_kata_path(kata.id)) %>
    <%= link_to('Delete', delete_kata_path(kata.id), method: 'delete') %>
  </li>
<% end %>
</ul>
